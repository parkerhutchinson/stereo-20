{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "removeComments": false,
    "baseUrl": ".",
    "types": [
      "node",
      "jest"
    ],
    "paths":{
      "*":[
        "./types/*",
        "./typings/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./types/**/*", "tests/config/svgTransform.js", "tests/config/otfTransform.js", "tests/config/jpgTransform.js"
  ]
}